<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VendingMachineFragment">

    <LinearLayout
        android:layout_width="190dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/VendingMachineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="name" />

        <TextView
            android:id="@+id/VendingMachineStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="status" />

        <TextView
            android:id="@+id/VendingMachineStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="studentNumber" />

        <TextView
            android:id="@+id/VendingMachineProductsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ProductsList" />

        <TextView
            android:id="@+id/VendingMachineAmountOfProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="AmountOfProducts" />
    </LinearLayout>

</FrameLayout>